{
  "name": "typescript-ddd-skeleton",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/CodelyTV/typescript-ddd-skeleton"
  },
  "license": "",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=6.14.0",
    "pnpm": ">=7.30.0"
  },
  "scripts": {
    "dev:mooc:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/mooc/backend/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:mooc:backend": "NODE_ENV=production node dist/src/apps/mooc/backend/start",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "NODE_ENV=test cucumber-js -p mooc_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@types/uuid-validate": "^0.0.1",
    "awilix": "^8.0.1",
    "body-parser": "^1.20.2",
    "bodybuilder": "^2.5.0",
    "bson": "^4.7.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "convict": "^6.2.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^1.4.0",
    "copy": "^0.3.2",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.15.0",
    "glob": "^7.2.3",
    "helmet": "^4.6.0",
    "http-status": "^1.6.2",
    "mongodb": "^5.3.0",
    "node-dependency-injection": "^2.7.3",
    "nunjucks": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uuid-validate": "^0.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.0",
    "@cucumber/cucumber-expressions": "^16.1.2",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^5.5.9",
    "@types/glob": "^7.2.0",
    "@types/helmet": "0.0.48",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.23",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.38.0",
    "eslint-config-codely": "^2.1.3",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "11.2.0",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^27.1.5",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "pnpm run lint:fix",
      "git add"
    ]
  }
}
